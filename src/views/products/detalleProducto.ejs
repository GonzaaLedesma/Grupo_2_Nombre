<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main>
      <h2 class="nombreEvento1"><%= detalle.nombre_evento %></h2>
      <div class="cajaDetalles">
        <div class="cajaImagen">
          <img
            class="imgTicket"
            src="/images/detallesProducto/ticket.jpg"
            alt="ticket"
          />
          <div class="cajaDescripcionBanda">
            <p class="descripcionBanda"><%= detalle.biografia %></p>
          </div>
        </div>
        <div class="cajaDescripcion">
          <div>
            <h2 class="nombreEvento2"><%= detalle.nombre_evento %></h2>
            <div class="cajaDatos">
              <h3>Datos del Evento</h3>
              <p>Ubicacion: <%= detalle.ubicacion %>.</p>
              <p>Sede: <%= detalle.sede %>.</p>
              <p>Capacidad: <%= detalle.capacidad_sede %> personas.</p>
              <p>Precio: <%= detalle.precio %>$.</p>
              <p>Dia: <%= detalle.fecha %>.</p>
              <p>Horario: <%= detalle.horario %>hs.</p>
              <p>Participacion: <%= detalle.participacion %>.</p>
            </div>
            <div class="subDescripcion">
              <p><%= detalle.descripcion %></p>
            </div>
            <form action="/producto/carrito/<%= detalle.id %>" method="POST">
              <div class="cajaPago">
                <div class="cajaCantidad">
                  <label for="Cantidad"></label>
                  <input
                    required
                    type="number"
                    min="1"
                    max="5"
                    step="1"
                    name="cantidad"
                    placeholder="Cantidad"
                  />
                </div>
              </div>
              <div>
                <label class="positionCondiciones"
                  ><input
                    type="checkbox"
                    name="terminos"
                    value="terminos"
                    required
                  />He leido y acepto los "<a
                    href="/usuario/terminosYCondiciones"
                    >Terminos y Condiciones</a
                  >"</label
                >
              </div>
              <button class="botonPago" type="submit">
                Agregar al carrito
              </button>
            </form>
            <% if(locals.adminLogin) {%>
            <div class="botonBarAdmin">
              <button class="botonFunctionAdmin">
                <a href="/administrador/edicion/<%= detalle.id %>">Editar</a>
              </button>
              <form
                action="/administrador/<%= detalle.id %>?_method=DELETE"
                method="POST"
                class="deleteForm"
              >
                <button class="botonFunctionAdminBorrar">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </div>
            <% } %>
          </div>
        </div>
      </div>
      <div class="bannerFooter">
        <img
          src="/images/DetallesProducto/BannerDetallesProducto.jpg"
          alt="bannerFooter"
        />
      </div>
      <script src="/js/detallesDelProducto.js"></script>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
