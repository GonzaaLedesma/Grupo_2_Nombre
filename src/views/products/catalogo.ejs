<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main>
      <% if(locals.adminLogin) {%> 
        <div class="positionBoton">
          <button class="botonCreacion"><a href="/administrador/creacion">Crear evento <i class="fa-solid fa-upload"></i></a></button>
        </div>
        <% } %> 
      <% if(locals.userLogin) {%> 
        <h2 class="titulosCategoria">SEGUN TU GUSTO</h2>
        <div class="cajaCategoriaLogged">
          <% products.filter(product => product.generoBanda == userdetail.gustosUsuario).forEach(product => { %>
          <div class="card">
            <img
              src="/images/Catalogo/<%= product.fotoEvento ? product.fotoEvento : 'not-Img.jpg'%>"
              class="card-img-top"
              alt="ImgBand"
            />
            <div class="card-body">
              <h5 class="card-title"><%= product.nombre%></h5>
              <p class="card-text"><%= product.sede%></p>
              <p class="card-text"><%= product.ubicacion%></p>
              <p class="card-text">Participacion: <%= product.participacion%></p>
              <p class="card-text card-date"><%= product.dia%></p>
              <% if(product.categoria == 'Pasados'){ %>
                <p class="card-text">NO SE ENCUENTRA DISPONIBLE</p>
              <% }else{ %>
                <a href="/producto/detalles/<%= product.id%>" class="btn btn-primary"
                  >Ir a detalles</a>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
        <% } %>
      <!-------------------------PRIMERO----------- -->
      <h2 class="titulosCategoria">ACTUALES</h2>
