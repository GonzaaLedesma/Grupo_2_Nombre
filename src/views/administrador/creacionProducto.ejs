<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
    <main class="mainRegister">
        <form class="formularioAdmin" action="" class="form-box">
            <h1 class="form-title">Creacion De Evento</h1>
            <div class="cajaAdmin">
                <label for="Nuevo-Nombre"></label>
                <input required type="text"  name="nombre" id="nombreEvento" placeholder="Evento">
            </div>
            <div class="cajaAdmin">
                <label for="Descripcion-Evento">Descripcion del Evento</label>
                <textarea class="textArea" placeholder="Descripcion breve del Evento y sobre el evento principal"></textarea>
            </div>
            <div class="cajaAdmin">
                <label for="ImgEvento">
                    <div class="label">Seleccione Foto de Evento</div>
                    <div class="fotoEventoAdmin"><input type="file" name="fotoEvento" accept=".jpg"></div>
                </label>
            </div>
            <div class="cajaAdmin"> 
                <label for="Dia"></label>
                <input required type="date" name="Dia" >
            </div>
            <div class="cajaAdmin"> 
                <label for="Dato-Importante"></label>
                <input required type="text" name="dato" placeholder="Dato Importante">
            </div>
            <div class="cajaAdmin"> 
                <label for="Precio"></label>
                <input required type="number" name="price" placeholder="Inserte Un Precio $$$">
            </div>
            <div class="cajaAdminSend">
                <button type="submit"><a href="/">Enviar</a></button>
            </div>
            <div class="cajaAdminSend">
                <button type="reset"><h6>Borrar</h6></button>
            </div>
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>