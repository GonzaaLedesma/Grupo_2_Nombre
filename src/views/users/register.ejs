<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main class="mainRegister">
      <form
        action="/usuario/register"
        method="POST"
        class="form-box"
        enctype="multipart/form-data"
      >
        <h1 class="form-title">Registro</h1>
        <div class="correcionCajasForm">
            <label for="nombre"></label>
            <input
                class="cajaRegisterInput <%= locals.errors && errors.nombre ? 'errorBorder' : null %>"
                type="text"
                name="nombre"
                placeholder="Nombre y apellido"
                value="<%= locals.oldData ? oldData.nombre : null %>"
            />
            <% if (locals.errors && errors.nombre) { %>
            <div class="errorTxt"><%= errors.nombre.msg %></div>
            <% } %>
        </div>
        <div class="correcionCajasForm">
            <label for="nombreUsuario"></label>
            <input
                class="cajaRegisterInput <%= locals.errors && errors.nombreUsuario ? 'errorBorder' : null %>"
                type="text"
                name="nombreUsuario"
                placeholder="Nombre de Usuario"
                value="<%= locals.oldData ? oldData.nombreUsuario : null %>"
            />
            <% if (locals.errors && errors.nombreUsuario) { %>
            <div class="errorTxt"><%= errors.nombreUsuario.msg %></div>
          <% } %>
        </div>
        <div class="correcionCajasForm">
            <label for="email"></label>
            <input
                class="cajaRegisterInput <%= locals.errors && errors.email ? 'errorBorder' : null %>"
                type="email"
                name="email"
                placeholder="E-mail"
                value="<%= locals.oldData ? oldData.email : null %>"
            />
            <% if (locals.errors && errors.email) { %>
            <div class="errorTxt"><%= errors.email.msg %></div>
            <% } %>
        </div>
        <div class="correcionCajasForm">
            <label for="pais"></label>
            <input
                class="cajaRegisterInput <%= locals.errors && errors.pais ? 'errorBorder' : null %>"
                type="text"
                name="pais"
                placeholder="Pais en el que resides"
                value="<%= locals.oldData ? oldData.pais : null %>"
            />
            <% if (locals.errors && errors.pais) { %>
            <div class="errorTxt"><%= errors.pais.msg %></div>
            <% } %>
        </div>
        <div class="correcionCajasForm">
            <label for="contrasenia"></label>
            <input
                class="cajaRegisterInput <%= locals.errors && errors.contrasenia ? 'errorBorder' : null %>"
                type="password"
                name="contrasenia"
                placeholder="ContraseÃ±a"
            />
            <% if (locals.errors && errors.contrasenia) { %>
            <div class="errorTxt"><%= errors.contrasenia.msg %></div>
            <% } %>
        </div>
        <div class="correcionCajasForm">
            <label class="tituloRegisterCaja" for="gustosUsuario"
                >Tus Gustos</label
            >
            <label class="checkBoxs">
                <input
                type="checkbox"
                name="gustosUsuario"
                value=" rock"
                <%= locals.oldData && oldData.gustosUsuario  == "rock" ? "checked" : null %>
                />Rock</label
            >
            <label class="checkBoxs"
                ><input 
                type="checkbox" 
                name="gustosUsuario" 
                value=" pop"
                <%= locals.oldData && oldData.gustosUsuario  == "pop" ? "checked" : null %>
                 />Pop
            </label>
            <label class="checkBoxs"
                ><input 
                type="checkbox" 
                name="gustosUsuario" 
                value=" metal"
                <%= locals.oldData && oldData.gustosUsuario == "metal"  ? "checked" : null %>
                />Metal
            </label>
            <label class="checkBoxs"
                ><input
                type="checkbox"
                name="gustosUsuario"
                value=" trap"
                <%= locals.oldData && oldData.gustosUsuario  == "trap" ? "checked" : null %>
                />Trap</label
            >
            <label class="checkBoxs"
                ><input
                type="checkbox"
                name="gustosUsuario"
                value=" reaggeaton"
                <%= locals.oldData && oldData.gustosUsuario  == "reaggeaton" ? "checked" : null %>
                />Reaggeaton</label
            >
            <label class="checkBoxs"
                ><input
                type="checkbox"
                name="gustosUsuario"
                value=" electronica "
                <%= locals.oldData && oldData.gustosUsuario == "electronica" ? "checked" : null %>
                />Electronica</label
            >
            <% if (locals.errors && errors.gustosUsuario) { %>
            <div class="errorTxt"><%= errors.gustosUsuario.msg %></div>
            <% } %>
        </div>
        <div class="correcionCajasForm">
            <label class="tituloRegisterCaja" for="genero">Genero</label>
            <select
                class="opcionesRegister <%= locals.errors && errors.genero ? 'errorBorder' : null %>"
                name="genero"
            >
                <option value="">Seleccione</option>
                <option value="masculino" <%= locals.oldData && oldData.genero  == "masculino" ?'selected' : null %> >Masculino</option>
                <option value="femenino" <%= locals.oldData && oldData.genero  == "femenino" ?'selected' : null %>>Femenino</option>
                <option value="helicoptero Apache" <%= locals.oldData && oldData.genero == "helicoptero Apache" ? 'selected' : null %>>Helicoptero Apache</option>
                <option value="otros" <%= locals.oldData && oldData.genero == "otro" ? 'selected' : null %>>Otros</option>
            </select>
            <% if (locals.errors && errors.genero) { %>
            <div class="errorTxt"><%= errors.genero.msg %></div>
            <% } %>
        </div>
        <div class="correcionCajasForm">
            <label for="infoUsuario" class="tituloRegisterCaja">Cuentanos sobre ti</label>
            <textarea
                class="textAreaRegister <%= locals.errors && errors.infoUsuario ? 'errorBorder' : null %>"
                name="infoUsuario"
                ><%= locals.oldData ? oldData.infoUsuario  : null %></textarea>
            <% if (locals.errors && errors.infoUsuario) { %>
            <div class="errorTxt"><%= errors.infoUsuario.msg %></div>
            <% } %>
        </div>
        <div class="cajaAdmin">
            <label for="ImgEvento">
                <div class="label">Seleccione una foto de Perfil</div>
                <div>
                <input
                    class="imagenPerfilRegister <%= locals.errors && errors.imagen ? 'errorBorder' : null %>"
                    type="file"
                    name="imagen"
                />
                </div>
                <% if (locals.errors && errors.imagen) { %>
                <div class="errorTxt"><%= errors.imagen.msg %></div>
                <% } %>
            </label>
        </div>
        <div class="cajaSendRegister">
            <% console.log(locals.oldData) %> 
          <button class="botonSumit" type="submit">Enviar</button>
        </div>
      </form>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
