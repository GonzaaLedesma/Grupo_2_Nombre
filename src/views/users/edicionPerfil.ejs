<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <div class="divParaGradiant"></div>
    <main class="mainRegister">
      <form
        action="/usuario/perfil/edicion?_method=PUT"
        method="POST"
        class="form-box" id="myForm"
        onsubmit='return validateForm()' 
        enctype="multipart/form-data"
      >
        <h1 class="form-title">Edicion de Perfil</h1>
        <div class="correcionCajasForm">
          <label for="nombre"></label>
          <input
            class="cajaRegisterInput <%= locals.errors && errors.nombre ? 'errorBorder' : null %>"
            type="text"
            name="nombre"
            value="<%= datosUsuario.nombre  %>"
          />
        </div>
        <div class="errorTxtNombre"></div>
        <div class="correcionCajasForm">
          <label for="nombre"></label>
          <input
            class="cajaRegisterInput <%= locals.errors && errors.apellido ? 'errorBorder' : null %>"
            type="text"
            name="apellido"
            value="<%= datosUsuario.apellido  %>"
          />
        </div>
        <div class="errorTxtApellido"></div>
        <div class="correcionCajasForm">
          <label for="nombreUsuario"></label>
          <input
            class="cajaRegisterInput <%= locals.errors && errors.nombre_usuario ? 'errorBorder' : null %>"
            type="text"
            name="nombre_usuario"
            value="<%= datosUsuario.nombre_usuario  %>"
          />
        </div>
        <div class="errorTxtUsuario"></div>
        <div class="correcionCajasForm">
          <label for="pais"></label>
          <input
            class="cajaRegisterInput <%= locals.errors && errors.pais ? 'errorBorder' : null %>"
            type="text"
            name="pais"
            value="<%= datosUsuario.pais  %>"
          />
        </div>
        <div class="errorTxtPais"></div>
        <div class="correcionCajasForm">
          <label class="tituloRegisterCaja" for="gustosUsuario"
            >Tu Gusto Favorito</label
          >
          <select class="opcionesRegister <%= locals.errors && errors.genero_id_favorito ? 'errorBorder' : null %>" name="genero_id_favorito">
            <option value="<%= datosUsuario.genero_id_favorito  %>">
              <%= datosUsuario.genero_id_favorito %>
            </option>
            <option value="1">Rock</option>
            <option value="2">Hard Rock</option>
            <option value="3">Pop</option>
            <option value="4">Rock Alternativo</option>
            <option value="5">Pop Rock</option>
            <option value="6">Pop Punk</option>
          </select>
        </div>
        <div class="errorTxtGeneroFav"></div>
        <br>
        <div class="correcionCajasForm">
          <label class="tituloRegisterCaja" for="genero">Genero</label>
          <select class="opcionesRegister <%= locals.errors && errors.identidad_de_genero ? 'errorBorder' : null %>" name="identidad_de_genero">
            <option value="<%= datosUsuario.identidad_de_genero  %>">
              <%= datosUsuario.identidad_de_genero %>
            </option>
            <option value="Masculino">Masculino</option>
            <option value="Femenino">Femenino</option>
            <option value="Otros">Otros</option>
          </select>
        </div>
        <div class="errorTxtIdentidadGenero"></div>
        <div class="correcionCajasForm">
          <label for="infoUsuario" class="tituloRegisterCaja <%= locals.errors && errors.descripcion ? 'errorBorder' : null %>"
            >Cuentanos sobre ti</label>
          <textarea class="textAreaRegister" name="descripcion">
<%= datosUsuario.descripcion  %></textarea
          >
        </div>
        <div class="errorTxtDescripcion"></div>
        <div class="cajaAdmin">
          <label for="ImgEvento">
            <div class="label">Nueva foto de Perfil</div>
            <div>
              <input class="imagenPerfilRegister <%= locals.errors && errors.foto_perfil ? 'errorBorder' : null %>" type="file" name="foto_perfil"/>
            </div>
            <div class="errorTxtFotoPerfil"></div>
          </label>
        </div>
        <div class="avisoErrorTxt"></div>
        <div class="cajaSendRegister">
          <button class="botonSumit" type="submit">Enviar</button>
        </div>
      </form>
      <script src="/js/edicionUsuario.js"></script>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
